
<div class="list-title">{{list.title}}</div>

<div class="task-container">
  {{#each list.tasks as |task| }}
  {{#unless task.isDeleted}}
  <div class="task-title" {{action 'toggleModal'}}>
    <p>{{task.title}}</p>
  </div>
    {{#if showModal}}
      {{#task-modal task=task toggleModal=(action 'toggleModal')}}  {{/task-modal}}
    {{/if}}
  {{/unless}}
  {{/each}}

  <div class="add-task">
   {{input placeholder="Add New Task" value=newTaskTitle enter="handleAddTask" name="addTask"}}
  </div>
</div>

